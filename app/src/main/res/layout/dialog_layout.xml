<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <RelativeLayout
     android:padding="5dp"
     android:layout_marginTop="5dp"
     android:layout_gravity="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:background="@android:color/holo_blue_dark"
         android:padding="5dp"
         android:layout_marginRight="0dp"
        android:id="@+id/tvWordDialog"
         android:layout_gravity="center"
         android:gravity="center"
         android:textSize="35sp"
         android:text="Word"
         android:textColor="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
     <ImageButton
         android:layout_alignRight="@+id/tvWordDialog"
         android:id="@+id/ibClearDialog"
         android:background="@null"
         android:layout_width="40dp"
         android:layout_height="30dp"
         android:src="@drawable/ic_cross"/>


 </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:button="@android:drawable/btn_star"
            android:gravity="right"
            android:layout_gravity="right"
            android:background="@null"
            android:id="@+id/cbStarDialog"
            android:layout_width="60dp"
            android:layout_height="30dp"
             />
        <ImageButton
            android:id="@+id/imageButtonSpeakerDialog"
            android:layout_gravity="left"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_speaker2"/>
    </LinearLayout>

<LinearLayout
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:padding="5dp"
        android:id="@+id/rvDefinitionsDialog"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>


</LinearLayout>